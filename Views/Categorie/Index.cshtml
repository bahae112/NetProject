@{
    @model List<Categorie>
    <div>
        <table class="table table-bordered table-striped">
            <tr>
                <th>Nom</th>
                <th>ordre</th>
            </tr>
            @foreach (var obj in Model)
            {
                <tr>
                    <td> @obj.Nom</td>
                    <td> @obj.OrdreAffichage</td>
                    <td><a asp-controller="Categorie" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Modifier</a> </td>
                    <td><a asp-controller="Categorie" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary">Supprimer</a> </td>
                </tr>
            }
        </table>
    </div>
    <div>
        <a asp-controller="Categorie" asp-action="Create" class="btn btn-primary">Créer une nouvelle catégorie</a>
    </div>

}
